{
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "esnext",
		"module": "esnext",

		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,

		"rootDir": "src",
		"outDir": "app",
		"allowJs": true,

		"declaration": true,

		"strict": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true
	},
	"include": ["src"]
}
